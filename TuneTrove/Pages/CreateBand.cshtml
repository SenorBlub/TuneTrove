@page
@model TuneTrove_presentation.Pages.CreateBandModel
@{
    ViewData["Title"] = "Create Band";
}

<h2>Create Band</h2>

<form method="post" asp-page-handler="Create">
    <div class="form-group">
        <label for="Name">Band Name</label>
        <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="BandLeider">Band Leader</label>
        <select id="BandLeider" name="BandLeiderId" class="form-control" asp-for="BandLeiderId">
            <option value="">Select Band Leader</option>
            @foreach (var bandLeider in Model.AvailableBandLeiders)
            {
                <option value="@bandLeider.Id">@bandLeider.Name</option>
            }
        </select>
        <span asp-validation-for="BandLeiderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Setlists">Setlists</label>
        <select id="Setlists" name="SetlistIds" class="form-control" asp-for="SetlistIds" multiple>
            @foreach (var setlist in Model.AvailableSetlists)
            {
                <option value="@setlist.Id">@setlist.Id</option>
            }
        </select>
        <span asp-validation-for="SetlistIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Muzikanten">Muzikanten</label>
        <select id="Muzikanten" name="MuzikantIds" class="form-control" asp-for="MuzikantIds" multiple>
            @foreach (var muzikant in Model.AvailableMuzikanten)
            {
                <option value="@muzikant.Id">@muzikant.Name</option>
            }
        </select>
        <span asp-validation-for="MuzikantIds" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-page-handler="Create">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
